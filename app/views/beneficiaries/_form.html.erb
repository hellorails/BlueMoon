<!-- Row start -->
<div class="row gutters">
<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">


<!-- Card starts -->
<div class="card">
<div class="card-body">


<!-- Row start -->
<div class="row justify-content-center gutters">
	<div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
		<form>
			<div class="form-block">
				<div class="form-block-header">
					<h5>New Beneficiary</h5>
					<h6>Add you details here.</h6>
				</div>
				<div class="form-block-body">
					<div class="form-group">
						  <%= f.input :unique_id,placeholder: 'Member Id', label: false %>
					</div>
					<div class="form-group">
						  <%= f.input :name,placeholder: 'Name', label: false %>
					</div>
					<div class="form-group">
						  <%= f.input :email,placeholder: 'Email', label: false %>
					</div>
					<div class="form-group">
						  <%= f.input :name,placeholder: 'Mobile Number', label: false %>
					</div>

					<div class="form-group">
						<textarea class="form-control" id="message" placeholder="Message" maxlength="140" rows="5"></textarea>
						<div class="form-text text-muted">
							<p id="characterLeft" class="help-block">You have reached the limit</p>
						</div>
					</div>
					
					<button type="button" id="submit" name="submit" class="btn btn-primary pull-right">Submit Form</button>
				</div>
			</div>
		</form>
	</div>
</div>
<!-- Row end -->


